{% extends 'base.html.twig' %}

{% block title %}Modification du mot de passe{% endblock %}

{% block body %}
    <div class="container-md mt-5">
        <div class="row d-flex justify-content-center gx-5 px-sm-5 mt-3">
            <div class="col-12">
                <div class="bg-light yellow-border rounded my-2 my-sm-3 p-3">
                    <h1 class="h2 mb-4">Modification du mot de passe</h1>
                    <div class="row mt-3">
                        {{ form_start(form) }}
                        {{ form_row(form.plainPassword, { 'label': 'Nouveau mot de passe' }) }}
                        {{ form_row(form.confirmPlainPassword, { 'label': 'Confirmation du nouveau mot de passe' }) }}
                        <button type="submit" class="btn btn-warning my-3">Modifier le mot de passe</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}