{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container d-flex flex-column justify-content-center vh-100">
        <h1 class="text-center font-brand h-15">FITNESS PARK</h1>
        <div class="container d-flex flex-column align-items-center justify-content-between bg-light rounded h-50">
            <h2 class="h3 mb-3 font-weight-normal mt-5 mb-4">Connexion</h2>
            <div class="w-co">
                <label for="inputEmail" class="align-self-start">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="w-co">
                <label for="inputPassword" class="align-self-start">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">
            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}

            <button class="btn btn-lg btn-warning mb-5 mt-4" type="submit">
                Se connecter
            </button>
        </div>
    </div>

</form>
{% endblock %}
